# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 120

# C/C++ files
[*.{c,cpp,h,hpp}]
indent_style = space
indent_size = 4
max_line_length = 120

# CMake files
[CMakeLists.txt,*.cmake]
indent_style = space
indent_size = 2

# JSON, YAML, TOML
[*.{json,yaml,yml,toml}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = 0

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Makefiles (must use tabs)
[Makefile]
indent_style = tab
